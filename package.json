{
  "engines": {
    "node": ">=11"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@nrkn/wad": "0.0.2",
    "babel-preset-airbnb": "^3.2.1",
    "ejs": "^2.6.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "image-size": "^0.7.1"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:static && npm run build:templates && npm run build:index",
    "build:clean": "rm -Rf web && mkdir -p web",
    "build:static": "cp -r src/static/* web",
    "build:templates": "node src/index.js",
    "build:index": "cp web/E1M1.html web/index.html"
  }
}
